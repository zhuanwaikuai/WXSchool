@model dynamic
@{
    ViewBag.Title = "学生信息管理";
}

@section styles{
    <link href="@Url.Content("~/Styles/jquery.datatables.css")" rel="stylesheet" />
}

<div class="panel-body">
    <form class="form-inline">
        <div class="form-group">
            <label class="control-label">学号、学生姓名：</label>
            <input type="text" class="form-control" id="txtName"/>
        </div>
        <input id="btnQuery" type="button" class="btn btn-primary" value="查 询">
        @Html.ActionLink("新 增", "Edit", "WXConfig", null, new { @class = "btn btn-success" })
    </form>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th style="width:80px;">学号</th>
            <th style="width:60px;">姓名</th>
            <th style="">身份证号</th>
            <th style="width:80px;">年级名称</th>
            <th style="width:80px;">班级名称</th>
            <th style="width:20%;">编辑</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.StudentNo</td>
                <td>@item.StudentName</td>
                <td>@item.IDCardNo</td>
                <td>@item.GradeName</td>
                <td>@item.ClassName</td>
                <td class="table-action">
                    <a href="#" onclick="doEdit(@item.StudentId)"><i class='fa fa-pencil'></i></a>
                    @*<a href="#" onclick="doDelete(@item.PId)" class="delete-row"><i class="fa fa-trash-o"></i></a>*@
                </td>
            </tr>
        }
    </tbody>
</table>