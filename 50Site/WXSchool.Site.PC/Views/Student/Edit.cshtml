@model WXSchool.Model.StudentInfo
@{
    ViewBag.Title = "学生信息";
}

<div class="panel-body">
    <form id="myForm" class="form-horizontal" method="POST">
        <input type="hidden" name="PId" value="@Model.StudentId" />
        <div class="form-group">
            <label class="col-sm-2 control-label">学号：<span class="asterisk">*</span></label>
            <div class="col-sm-3">
                <input type="text" class="form-control required" name="AppID" value="@Model.StudentNo">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">姓名：<span class="asterisk">*</span></label>
            <div class="col-sm-3">
                <input type="text" class="form-control required" name="AppID" value="@Model.StudentName">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">身份证号：<span class="asterisk">*</span></label>
            <div class="col-sm-3">
                <input type="text" class="form-control required" name="AppSecret" value="@Model.IDCardNo">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">班级：</label>
            <div class="col-sm-3">
                <input type="text" class="form-control" name="AppToken" value="@Model.ClassName">
            </div>
        </div>
    </form>
</div>
<div class="panel-footer">
    <div class="col-sm-6 col-sm-offset-3">
        <input type="button" id="submit" class="btn btn-primary" value="保　存" />&nbsp;
        <input type="button" id="goback" class="btn btn-default" value="返　回" />
    </div>
</div>

@section scripts
{
    <script src="@Url.Content("~/Scripts/jquery-form.js")"></script>
    <script>
        $().ready(function () {
            $("#submit").click(function () {
                if ($("#myForm").valid()) {
                    $("#myForm").ajaxSubmit({
                        success: function (data) {
                            alert(data.Message);
                            if (data.ResultType == 200) {
                                location.href = "@Url.Action("Index")";
                            }
                        }
                    });
                }
            });
        });
    </script>
}
