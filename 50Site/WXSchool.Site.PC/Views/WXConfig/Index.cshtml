@model dynamic
@{
    ViewBag.Title = "机构微信配置";
}

@section styles{
    <link href="@Url.Content("~/Styles/jquery.datatables.css")" rel="stylesheet" />
}

<div class="panel-body">
    <form class="form-inline">
        <div class="form-group">
            <label class="control-label">机构名称：</label>
            <input type="text" class="form-control" id="txtName"/>
        </div>
        <input id="btnQuery" type="button" class="btn btn-primary" value="查 询">
        @Html.ActionLink("新 增", "Edit", "WXConfig", null, new { @class = "btn btn-success" })
    </form>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th style="width:30%;">机构名称</th>
            <th style="width:30%;">AppID</th>
            <th style="width:20%;">最后获取</th>
            <th style="width:20%;">操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OrgName</td>
                <td>@item.AppID</td>
                <td>@item.LastTime</td>
                <td class="table-action">
                    <a href="#" onclick="doEdit(@item.OrgId)"><i class='fa fa-pencil'></i></a>
                    @*<a href="#" onclick="doDelete(@item.PId)" class="delete-row"><i class="fa fa-trash-o"></i></a>*@
                </td>
            </tr>
        }
    </tbody>
</table>