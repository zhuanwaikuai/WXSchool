@model WXSchool.Model.Meeting.Hotel
@{
    ViewBag.Title = "酒店管理";
}

<div class="panel-body">
    <form id="myForm" class="form-horizontal" method="POST">
        <input type="hidden" name="HId" value="@Model.HId" />
        <div class="form-group">
            <label class="col-sm-2 control-label">酒店名称：<span class="asterisk">*</span></label>
            <div class="col-sm-3">
                <input type="text" class="form-control required" name="HName" value="@Model.HName">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">标准/元：<span class="asterisk">*</span></label>
            <div class="col-sm-3">
                <input type="text" class="form-control required digits" name="HPrice" value="@Model.HPrice">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">总房间数：<span class="asterisk">*</span></label>
            <div class="col-sm-3">
                <input type="text" class="form-control required digits" name="TotalRooms" value="@Model.TotalRooms">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">已订房间数：</label>
            <div class="col-sm-3">
                <input type="text" class="form-control" name="BookedRooms" value="@Model.BookedRooms" readonly="readonly">
            </div>
        </div>
    </form>
</div>
<div class="panel-footer">
    <div class="col-sm-6 col-sm-offset-3">
        <input type="button" id="submit" class="btn btn-primary" value="保　存" />&nbsp;
        <input type="button" id="goback" class="btn btn-default" value="返　回" />
    </div>
</div>

@section scripts
{
    <script src="@Url.Content("~/Scripts/jquery-form.js")"></script>
    <script>
        $().ready(function () {
            $("#submit").click(function () {
                if ($("#myForm").valid()) {
                    $("#myForm").ajaxSubmit({
                        success: function (data) {
                            alert(data.Message);
                            if (data.ResultType == 200) {
                                location.href = "@Url.Action("Index")";
                            }
                        }
                    });
                }
            });
        });
    </script>
}
