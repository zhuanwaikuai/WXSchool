            var doQuery = function () {
                var orgName = $("#txtName").val();
                $.ajax({
                    url: '@Url.Action("Search")',
                    type: 'get',
                    data: { orgName: orgName },
                    success: function (data) {
                        $(".table tbody").empty();
                        $(".table tbody").html(data);
                    },
                    error: function (e) {
                        alert("系统繁忙，请稍后再试！");
                    },
                    complete: function () {
                    }
                });
            };
            $().ready(function () {
                $("#btnQuery").click(function () {
                    doQuery();
                });
            });
    </script>
}