@{
    ViewBag.Title = "会务管理";
}

@section styles{
    <link href="@Url.Content("~/Styles/jquery.datatables.css")" rel="stylesheet" />
}

<div class="panel-body">
    <form class="form-inline">
        <div class="form-group">
            <label class="control-label">会议标题：</label>
            <input type="text" class="form-control" id="txtName" />
        </div>
        <input id="btnQuery" type="button" class="btn btn-primary" value="查 询">
        @Html.ActionLink("新 增", "Edit", "Meeting", null, new { @class = "btn btn-success" })
    </form>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th style="width:40%;">会议标题</th>
            <th style="width:20%;">开始时间</th>
            <th style="width:20%;">结束时间</th>
            <th style="width:20%;">操作</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
